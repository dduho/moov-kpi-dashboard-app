# Frontend Environment Configuration Template
# Copy this file to .env and fill in your actual values

# API Configuration
# Use localhost:8000 for local development (when backend runs outside Docker)
# Docker Compose will override this with http://backend:8000/api
VITE_API_BASE_URL=http://localhost:8000/api
VITE_API_TIMEOUT=10000

# Application Settings
VITE_APP_TITLE=Moov KPI Dashboard
VITE_APP_VERSION=1.0.0

# Development Settings
VITE_DEV_MODE=true

# Chart.js Settings
VITE_CHART_ANIMATION_DURATION=1000
VITE_CHART_RESPONSIVE=true

# Date Format Settings
VITE_DATE_FORMAT=DD/MM/YYYY
VITE_TIME_FORMAT=HH:mm:ss